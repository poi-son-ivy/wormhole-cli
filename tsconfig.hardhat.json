{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./typechain-types"
    ]
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./typechain-types/**/*.ts"
  ]
}
